div.dropdown
  small.text-primary(id='ddEditor', data-toggle='dropdown', aria-expanded='true')
    i.pointer.editor.fa-fw(
        class='{{ exercise.getEditor().icon() }}',
        ng-class='{ "mu-disabled": exercise.getEditor().isDisabled }')
  ul.dropdown-menu.dropdown-menu-right(
      aria-labelledby='ddEditor',
      ng-if='!exercise.getEditor().isDisabled')
    li(
        ng-repeat='editor in Editor.types() | orderBy:key',
        ng-click='exercise.setEditor(editor)',
        ng-if='!Editor.from(editor).isInvisible')
      a(href='')
        i(class='{{ Editor.from(editor).icon() }}')
        span {{ editor | translate }}
